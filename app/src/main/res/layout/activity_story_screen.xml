<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/storyid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/storybegins"
    tools:context="com.peninsula.nuunn.StoryScreen"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/storymascot"
        android:layout_width="201dp"
        android:layout_height="470dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/u2"
        android:adjustViewBounds="true"

        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.peninsula.nuunn.TypeWriter
        android:id="@+id/storyTextView"

        android:layout_width="292dp"
        android:layout_height="247dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="200dp"

        android:adjustViewBounds="true"
        android:alpha="9"
        android:autoText="false"
        android:clickable="true"
        android:fadingEdge="horizontal"
        android:scaleType="fitCenter"
        android:shadowColor="#000000"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#ffffff"
        android:textDirection="anyRtl"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/storymascot"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:onClick="onClick"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bh"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@drawable/building"/>

    <ImageButton
        android:id="@+id/next"
        android:layout_width="119dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="false"
        android:fromAlpha="0.0"
        android:scaleType="fitXY"
        android:toAlpha="1.0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/storyTextView"
        app:layout_constraintLeft_toLeftOf="@+id/storyTextView"
        app:srcCompat="@drawable/next"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <ImageView
        android:id="@+id/whisper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/whisper"/>

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gifTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/filmg"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
